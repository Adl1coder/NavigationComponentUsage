<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/anasayfaFragment">

    <fragment
        android:id="@+id/anasayfaFragment"
        android:name="com.adilegungor.navigationcomponent.AnasayfaFragment"
        android:label="fragment_anasayfa"
        tools:layout="@layout/fragment_anasayfa" >
        <action
            android:id="@+id/sayfaAGit"
            app:destination="@id/sayfaAFragment" />
        <action
            android:id="@+id/sayfaXGit"
            app:destination="@id/sayfaXFragment" />
    </fragment>
    <fragment
        android:id="@+id/sayfaAFragment"
        android:name="com.adilegungor.navigationcomponent.SayfaAFragment"
        android:label="fragment_sayfa_a"
        tools:layout="@layout/fragment_sayfa_a" >
        <action
            android:id="@+id/sayfaBGit"
            app:destination="@id/sayfaBFragment" />
    </fragment>
    <fragment
        android:id="@+id/sayfaBFragment"
        android:name="com.adilegungor.navigationcomponent.SayfaBFragment"
        android:label="fragment_sayfa_b"
        tools:layout="@layout/fragment_sayfa_b" >
        <action
            android:id="@+id/sayfaBdenYGit"
            app:destination="@id/sayfaYFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/sayfaXFragment"
        android:name="com.adilegungor.navigationcomponent.SayfaXFragment"
        android:label="fragment_sayfa_x"
        tools:layout="@layout/fragment_sayfa_x" >
        <action
            android:id="@+id/sayfaYGit"
            app:destination="@id/sayfaYFragment"
            app:popUpTo="@id/sayfaXFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sayfaYFragment"
        android:name="com.adilegungor.navigationcomponent.SayfaYFragment"
        android:label="fragment_sayfa_y"
        tools:layout="@layout/fragment_sayfa_y" />
</navigation>